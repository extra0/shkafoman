extends _layout
block content
	// блок калькулятора
	.calculation
		.container
			h2.title Просчитайте стоимость шкафа всего за 3 шага
			// шаги калькулятора
			.calculation__steps-section
				- for (i = 1; i <= 3; ++i) {
					.calculation__steps-block
						p.calculation__steps-text Шаг #{i}
							img.calculation__steps-img(src="img/ok.png", alt="okey")
						- if (i == 1) {
							button.calculation__steps-btn.active(type="button" step-btn="#{i}") Характеристики
						- } else if (i == 2) {
							button.calculation__steps-btn(type="button" step-btn="#{i}" disabled) Материалы
						- } else {
							button.calculation__steps-btn(type="button" step-btn="#{i}" disabled) стоимость
						- }
				- }
			// конец шаги калькулятора
			// шаг 1
			.row
				// блок с фильтрами
				.col-sm-3
					.calculation__filter
						form(action="form")
							// шаг 1
							.calculation__filter-step
								// фильтр дверей
								.calculation__filter-block
									p.calculation__filter-title._doors-bg Количество дверей
									.calculation__filter-radio-block
										.calculation__filter-radio-wrapper
											- for (i = 2; i <= 4; ++i) {
												- if (i == 2) {
													input.calculation__filter-radio(type="radio" name="doors" value="#{i}" id="radio_#{i}" checked)
													label.calculation__filter-label(for="radio_#{i}") #{i}
												-	} else {
													input.calculation__filter-radio(type="radio" name="doors" value="#{i}" id="radio_#{i}")
													label.calculation__filter-label(for="radio_#{i}") #{i}
												- }
											- }
								// конец фильтра дверей
								// фильтр глубины
								.calculation__filter-block
									p.calculation__filter-title._depth-bg Глубина
									.calculation__filter-range-wrapper(style="width: 210px;")
										.calculation__filter-range#depth
								// конец фильтра глубины
								// фильтр ширины
								.calculation__filter-block
									p.calculation__filter-title._width-bg Ширина
									.calculation__filter-range-wrapper
										.calculation__filter-range#width
								// конец фильтра ширины
								// фильтр высоты
								.calculation__filter-block
									p.calculation__filter-title._height-bg Высота
									.calculation__filter-range-wrapper
										.calculation__filter-range#height
								// конец фильтра высоты
								.calculation__filter-block
									button.btn.calculation__filter-btn(type="button") Следующий шаг
							// конец шаг 1
							// шаг 2
							.calculation__filter-step
								.calculation__filter-block.slideOut
									p.calculation__filter-title._material-bg Материалы
									.calculation__filter-select-block
										- for (i = 1; i <= 4; ++i) {
											select.calculation__filter-select(item-door-number="#{i}")
												option(data-class="none" item-door-material="none") Выберите Материал
												option(data-class="bamboo" item-door-material="Door_bamboo") Бамбук
												option(data-class="mirror" item-door-material="Door_mirror") Зеркало
												option(data-class="oracal" item-door-material="Door_oracal") Оракал
												option(data-class="picture" item-door-material="Door_picture") Фотопечать
												option(data-class="wood" item-door-material="Door_wood") ДСП
										- }
								.calculation__filter-block.slideOut
									button.btn.calculation__filter-btn(type="button") Следующий шаг
							// конец шаг 2
							// шаг 3
							.calculation__filter-step
								.calculation__filter-block.slideOut
									p че ни будь из инфы еще
								.calculation__filter-block.slideOut
									p че ни будь из инфы
								.calculation__filter-block.slideOut
									button.btn.calculation__filter-btn(type="submit") Оформить заказ
							// конец шаг 3
				// конец блока с фильтрами
				// блок с изображением
				.col-sm-9
					.calculation__img-wrapper
						.calculation__img-holder
							// текущие картинки
							img.calculation__img(src="", next-img)
							img.calculation__img(src="", current-img)
							// конец текущие картинки
							.calculation__material-holder
								// картинки для материалов дверей
								img.calculation__material-holder-img(src="")
								img.calculation__material-holder-img(src="")
								img.calculation__material-holder-img(src="")
								img.calculation__material-holder-img(src="")
								// конец картинки для материалов дверей
				// конец блока с изображением 
	// конец блока калькулятора